@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

<script type="text/javascript">
    $(function () {
        $('#localityId').change(function()
        {
            var id = $(this).val();
            $.ajax({
                type: 'GET',
                url: '@Url.Action("GetStreetsByLocality")/' + id,
                success: function (data) {
                    $('#streetId').replaceWith(data);
                }
            });
        });
    })
</script>
}
