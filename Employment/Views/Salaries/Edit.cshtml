@model Employment.Models.SalaryDto

@{
    ViewData["Title"] = "Редактирование";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Редактировать</h1>

<h4>Заработную плату</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="PostId" />
            <div class="form-group">
                <label asp-for="LowerLimit" class="control-label"></label>
                <input asp-for="LowerLimit" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="UpperLimit" class="control-label"></label>
                <input asp-for="UpperLimit" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" style="margin-top:5px" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Details" asp-controller="Posts" asp-route-id="@Model.PostId">Вернуться</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
