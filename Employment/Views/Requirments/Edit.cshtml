@model Employment.Data.Requirment

@{
    ViewData["Title"] = "Редактирование";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Редактировать</h1>

<h4>Requirment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="PostId" />

            <div class="form-group">
                <label asp-for="LowerAgeLimit" class="control-label"></label>
                <input asp-for="LowerAgeLimit" class="form-control" />
                <span asp-validation-for="LowerAgeLimit" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UpperAgeLimit" class="control-label"></label>
                <input asp-for="UpperAgeLimit" class="form-control" />
                <span asp-validation-for="UpperAgeLimit" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CommunicationSkill" class="control-label"></label>
                <select asp-for="CommunicationSkill" class="form-control" asp-items="ViewBag.CommunicationSkill"></select>
                <span asp-validation-for="CommunicationSkill" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GenderId" class="control-label"></label>
                <select asp-for="GenderId" class="form-control" asp-items="ViewBag.GenderId"></select>
                <span asp-validation-for="GenderId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" style="margin-top:5px" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Вернуться</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
