@model Employment.Data.SocialResponsibility

@{
    ViewData["Title"] = "Редактирование";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Редактировать</h1>

<h4>Социальные обязательства</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="PostId" />

            <div class="form-group">
                <label asp-for="EmploymentBook" class="control-label"></label>
                <select asp-for="EmploymentBook" class="form-control" asp-items="ViewBag.EmploymentBook"></select>
            </div>
            <div class="form-group">
                <label asp-for="SocialPackage" class="control-label"></label>
                <select asp-for="SocialPackage" class="form-control" asp-items="ViewBag.SocialPackage"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" style="margin-top:5px" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Вернуться</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
